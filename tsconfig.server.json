{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "./dist/server",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["server/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/components/**/*", "src/lib/**/*", "src/store/**/*"]
}